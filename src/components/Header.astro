---
import { ui } from "@/i18n/ui";
import { home } from "@/i18n/docs";

const lang = (Astro.currentLocale as "es" | "en") || "en";
const { greeting, about } = ui[lang];
const { shortAbout } = home[lang];
const aboutUrl = `/${lang}/about`;
---

<header>
  <p>{shortAbout} <a href={aboutUrl}>{about}.</a></p>
  <hr />
</header>
